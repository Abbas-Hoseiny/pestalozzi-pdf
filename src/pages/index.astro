---
import CaptureApp from "../components/CaptureApp.astro";

const rawBase = import.meta.env.BASE_URL ?? "/";
const basePath = rawBase.endsWith("/") ? rawBase : `${rawBase}/`;
const erfassungScriptSrc = `${basePath}scripts/erfassung.js`;
---
<CaptureApp
  title="Direkte Fotoerfassung"
  description="App öffnen, Foto aufnehmen, beschreiben und als PDF exportieren – ohne zusätzliche Schritte."
  scriptSrc={erfassungScriptSrc}
/> 
